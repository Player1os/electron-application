{
	"compilerOptions": {
		"experimentalDecorators": true,
		"module": "commonjs",
		"noEmitOnError": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitUseStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es2017",
		"baseUrl": ".",
		"paths": {
			"*": [
				"*"
			],
			".../*": [
				"./*"
			]
		},
		"typeRoots": [
			"node_modules/@types",
			"source/@types"
		]
	},
	"exclude": [
		"build",
		"dist",
		"node_modules"
	]
}
